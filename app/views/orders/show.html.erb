<div class="individual">

<h2>Your Order</h2>

<b>Order number</b>: <%= @order.id %><br>
<b>Customer</b>: <%= @order.user.email %><br><br>

<% @ordered_products.each do |item| %>
  <img src="<%= item.product.img_preview %>" class="thumbnail"><br>
  <b>Product</b>: <%= item.name %> <br>
  <b>Quantity</b>: <%= item.quantity %> <br>
  <b>Price</b>: <%= item.price %><br><br>
<% end %>

<b>Subtotal</b>: <%= number_to_currency(@order.subtotal) %><br>
<b>Tax</b>: <%= number_to_currency(@order.tax) %><br>
<b>Total: <%= number_to_currency(@order.total) %></b><br>

</div>
