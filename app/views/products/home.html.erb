<div class="container">
<h1>Products</h1>
<div class="row">
  <% @products.each do |product| %>
   <div class="product-box col-md-3">
    <img src="<%= product.image %>" alt="<%= product.description %>"> <br>
    <%= product.name %> <br>   
    $<%= product.price %> <br>
    <%= product.description %> <br> <br>
  </div>
<% end %>
</div>
</div>