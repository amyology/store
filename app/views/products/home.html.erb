<div class="container">
<h1>Soaps</h1>
<div class="row">
  <% @products.each do |product| %>
   <div class="product-box col-md-3 col-sm-6">
    <img src="<%= product.image %>" alt="<%= product.description %>" class="img-responsive center-block"> <br>
    <div class="description-box">
      <%= product.name.upcase %> <br>   
      $<%= product.price %> <br>
      <i><%= product.description %></i>
    </div>
  </div>
<% end %>
</div>
</div>