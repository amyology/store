<div class="center">
  <h2>Add A Supplier</h2>
</div>

<div class="row">
  <div class="col-md-3"></div>
  <div class="form-box col-md-6">
    <%= form_tag '/suppliers', method: :post do %>

      <%= label_tag :name %>
      <%= text_field_tag :name %> <br>

      <%= label_tag :email %>
      <%= text_field_tag :email %> <br>

      <%= label_tag :phone %>
      <%= text_field_tag :phone %> <br>

      <%= submit_tag 'Add' %>
    <% end %>
  </div>
  <div class="col-md-3"></div>

</div>